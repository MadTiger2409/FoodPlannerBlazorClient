@page "/plannedMeals"
@* Fix it to use OnParametersSet and QueryHelpers *@
@page "/plannedMeals?from={From:datetime}&to={To:datetime}"

<div class="card">
    @if (ViewModel.Response.Success == false)
    {
        <h5 class="card-header">@ViewModel.Response.Error.Title</h5>
        <div class="card-body">
            <p class="card-text">
                <ul>
                    @foreach (var detail in ViewModel.Response.Error.Details)
                    {
                        <li>@detail</li>
                    }
                </ul>
            </p>
        </div>
    }
    else if (ViewModel.Response.Success == true && ViewModel.Response.Value.Count == 0)
    {
        <h5 class="card-header">No data</h5>
        <div class="card-body">
            <h6 class="card-title">There is no data for selected period</h6>
        </div>
    }
    else
    {
        <div class="card-body">
            @if ((To.Date - From.Date).TotalDays == 0)
            {
                <h5 class="card-title">Meals planned for today (@From.Date.ToString("yyyy-MM-dd"))</h5>
            }
            else
            {
                <h5 class="card-title">Meals planned from @From.Date.ToString("yyyy-MM-dd") to @To.Date.ToString("yyyy-MM-dd")</h5>
            }

            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading0">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse0" aria-expanded="true" aria-controls="collapse0">
                            @ViewModel.Response.Value.FirstOrDefault().Meal.Name
                        </button>
                    </h2>
                    <div id="collapse0" class="accordion-collapse collapse show" aria-labelledby="heading0" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var ingredient in ViewModel.Response.Value.FirstOrDefault().Meal.Ingredients)
                                {
                                    <li>@ingredient.Product.Name @ingredient.Amount @ingredient.Unit.Name</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                @if (ViewModel.Response.Value.Count > 1)
                {
                    for (int i = 1; i < ViewModel.Response.Value.Count; i++)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@($"heading{i}")">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@($"#collapse{i}")" aria-expanded="false" aria-controls="@($"collapse{i}")">
                                    @ViewModel.Response.Value[i].Meal.Name
                                </button>
                            </h2>
                            <div id="@($"collapse{i}")" class="accordion-collapse collapse" aria-labelledby="@($"heading{i}")" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <ul>
                                        @foreach (var ingredient in ViewModel.Response.Value[i].Meal.Ingredients)
                                        {
                                            <li>@ingredient.Product.Name @ingredient.Amount @ingredient.Unit.Name</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>