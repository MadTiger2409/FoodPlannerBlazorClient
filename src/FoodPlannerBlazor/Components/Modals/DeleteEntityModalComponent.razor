<div class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="deleteEntityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteEntityModalLabel">Delete @EntityName</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete @EntityName?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>